<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cmput301f16t16.hitchhiker.RegisterActivity">

    <TextView
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUpTitle"
        android:textSize="28sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Enter your details below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signUpTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/enterDetailsText"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="First Name"
        android:ems="10"
        android:layout_below="@+id/enterDetailsText"
        android:layout_alignParentStart="true"
        android:id="@+id/firstNameText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Last Name"
        android:ems="10"
        android:layout_below="@+id/firstNameText"
        android:layout_alignEnd="@+id/firstNameText"
        android:id="@+id/lastNameText" />

    <TextView
        android:text="Your e-mail address will be your username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastNameText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/textView3"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Confirm Password"
        android:ems="10"
        android:id="@+id/confirmPasswordText"
        android:layout_below="@+id/passwordText"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Phone Number"
        android:ems="10"
        android:id="@+id/phoneNumberText"
        android:layout_below="@+id/confirmPasswordText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailAddressText"
        android:hint="E-mail"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textVisiblePassword"
        android:hint="Password"
        android:ems="10"
        android:id="@+id/passwordText"
        android:layout_below="@+id/emailAddressText"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Rider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/riderCheckBox"
        android:layout_alignBaseline="@+id/driverCheckBox"
        android:layout_alignBottom="@+id/driverCheckBox"
        android:layout_toStartOf="@+id/signUpTitle"
        android:layout_marginEnd="16dp" />

    <CheckBox
        android:text="Both"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/riderAndDriverCheckBox"
        android:layout_marginStart="17dp"
        android:layout_alignBaseline="@+id/driverCheckBox"
        android:layout_alignBottom="@+id/driverCheckBox"
        android:layout_toEndOf="@+id/driverCheckBox" />

    <CheckBox
        android:text="Driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/driverCheckBox"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/registerButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
