<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_driver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cmput301f16t16.hitchhiker.DriverActivity">



     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Pending Requests"
         android:textSize="28dp"
         android:layout_centerHorizontal="true"
         android:id="@+id/pending"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/pending"
        android:id="@+id/pending_requests_listview" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/home_button"
        android:layout_gravity="bottom"
        android:layout_weight="0.33"
        android:layout_alignBottom="@+id/browse"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/browse"
        android:onClick="HomeAction"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse Request"
        android:id="@+id/browse"
        android:layout_gravity="bottom"
        android:layout_weight="0.33"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pending_requests_listview"
        android:onClick="BrowseRequestAction"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:id="@+id/profile_button"
        android:layout_weight="0.33"
        android:layout_gravity="bottom"
        android:layout_below="@+id/pending_requests_listview"
        android:layout_toRightOf="@+id/browse"
        android:layout_alignParentEnd="true"
        android:onClick="UserProfilePageAction"/>


</RelativeLayout>
